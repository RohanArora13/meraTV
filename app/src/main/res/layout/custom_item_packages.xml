<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:contentPadding="@dimen/_2sdp"
    app:strokeColor="@color/green_teal_600"
    app:strokeWidth="@dimen/_2sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/package_info_layout"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/package_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxEms="8"
                android:maxLines="2"

                android:paddingStart="@dimen/_4sdp"
                android:text="packageaNameamain"
                android:textColor="#000"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/package_name_tv"
                android:ellipsize="end"
                android:maxEms="9"
                android:maxLines="1"
                android:paddingStart="@dimen/_4sdp"

                android:paddingTop="@dimen/_1sdp"
                android:text="Star HD Package gfhjfdgkdfhgfdkjfdfjk"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/package_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/package_add_btn"
                android:gravity="end"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_3sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:text="300"
                android:textAlignment="textEnd"
                android:textColor="#000"
                android:textSize="@dimen/_22sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/package_non_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/you_save"
                android:layout_marginBottom="-2dp"
                android:layout_toRightOf="@+id/package_price_tv"
                android:gravity="end"
                android:paddingStart="@dimen/_2sdp"
                android:text="50"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/you_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/package_price_tv"
                android:layout_marginTop="-1dp"
                android:layout_toRightOf="@+id/package_price_tv"
                android:paddingStart="@dimen/_2sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="You Save 26%"
                android:textAlignment="viewStart"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_8sdp"
                android:textStyle="normal" />


            <Button
                android:id="@+id/package_add_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_23sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:background="@drawable/roundbtn"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Add"
                android:textColor="@color/green_teal_600"
                android:textSize="@dimen/_11ssp" />

        </RelativeLayout>

        <!-- scroll view-->
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/package_info_layout">

            <GridLayout
                android:id="@+id/channel_tablelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/package_info_layout"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/text_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="7"
                android:maxLines="1"
                android:padding="@dimen/_2sdp"
                android:text="Star HD Package gfhjfdgkdfhgfdkjfdfjk"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            </GridLayout>


